<div class="section-title">
  <h2>Data Petani</h2>
</div>

<form id="form" action="<%=action%>" method="POST">
  <div class="row">
    <div class="card shadow border border-primary">
      <div class="col-md-12 mb-4 mt-4">
        <div class="form-group">
          <label>Nama</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Name"
            required
            value="<%= value.name%>"
            readonly
          />
        </div>
      </div>

      <div class="col-md-12 mb-4 mt-4">
        <div class="form-group">
          <label>Bobot</label>
          <input
            type="number"
            step="0.01"
            min="0"
            max="2"
            name="bobot"
            class="form-control"
            placeholder="Bobot"
            value="<%= value.bobot%>"
            required
          />
        </div>
      </div>

      <div class="col-md-12 mb-4">
        <button type="submit" class="btn btn-primary col-md-12">Simpan Data</button>
      </div>
    </div>
  </div>
</form>
